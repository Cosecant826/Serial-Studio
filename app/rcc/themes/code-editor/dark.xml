<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Dark">
  <!-- General Colors -->
  <style name="Text" foreground="#aaadb2" background="#0e0e0e"/>
  <style name="Selection" background="#4b6cb7" foreground="#ffffff"/>
  <style name="LineNumber" foreground="#606060" background="#0e0e0e"/>
  <style name="CurrentLine" background="#121212"/>
  <style name="CurrentLineNumber" foreground="#4b6cb7" bold="true"/>
  <style name="Occurrences" background="#212325"/>
  <style name="SearchResult" background="#242628" foreground="#aaadb2"/>

  <!-- Syntax Highlighting -->
  <style name="Keyword" foreground="#c678dd" bold="true"/>
  <style name="Type" foreground="#4b6cb7"/>
  <style name="Function" foreground="#d19a66"/>
  <style name="Macro" foreground="#ffcc00"/>
  <style name="String" foreground="#98c379"/>
  <style name="Number" foreground="#e06c75"/>
  <style name="Comment" foreground="#6e7074" italic="true"/>
  <style name="Label" foreground="#ff2d55"/>
  <style name="Operator" foreground="#56b6c2"/>
  <style name="Punctuation" foreground="#aaadb2"/>
  <style name="Preprocessor" foreground="#c678dd" italic="true"/>

  <!-- Braces and Matching -->
  <style name="Parentheses" background="#4b6cb7" foreground="#0e0e0e"/>
  <style name="ParenthesesMismatch" background="#e06c75" foreground="#ffffff"/>

  <!-- Errors and Warnings -->
  <style name="Warning" underlineColor="#d19a66" underlineStyle="SingleUnderline"/>
  <style name="Error" underlineColor="#e06c75" underlineStyle="SingleUnderline"/>
  <style name="DisabledCode" foreground="#606060" italic="true"/>

  <!-- Diff Highlighting -->
  <style name="AddedLine" foreground="#98c379"/>
  <style name="RemovedLine" foreground="#e06c75"/>
  <style name="DiffContextLine" background="#121212"/>
  <style name="DiffSourceLine" background="#161616"/>
  <style name="DiffDestLine" background="#212325"/>
</style-scheme>
